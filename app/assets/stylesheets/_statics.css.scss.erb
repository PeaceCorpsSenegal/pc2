.statics {
  &#splash {
    #page {
      .container {
        overflow: visible;
        //margin-top: 1em;
        #country {
        	font-size: 15em;
        	line-height: .8em;
        }
        #pc_big {
        	width: 100%;
        	height: 90%;
        }
        #patch {
        	margin-bottom: 1em;
        }
        div.spotlight {
          div.photo_container {
            background-position: 50% 50%;
            background-repeat: no-repeat;
            background-color: black;
            background-size: 120% auto;
            height: 200px;
            border: 1px solid white;
            box-shadow: 0 0 1px black;
            position: relative;
            .caption {
              background: black;
              opacity: .8;
              color: $steel_blue;
              position: absolute;
              bottom: 0;
              left: 0;
              width: 98%;
              padding: 1%;
              font-size: 2em;
            }
          }
          .text {
            margin-top: 1em;
            font-size: 1.5em;
            text-align: justify;
          }

        }
        #slider_container {
        	height: 390px;
        	margin-bottom: 50px;
	        @include shadow(5px);
	        #slider1 {
	          margin: 0;
	          .panel {
	            position: relative;
	          }
	          .slide {
	            background-position: 50% 50%;
	            background-repeat: no-repeat;
	            background-color: black;
	            background-size: 100% auto;
	            position: relative;
	            .caption {
	              background: black;
	              opacity: .8;
	              color: white;
	              position: absolute;
	              bottom: 0;
	              left: 0;
	              width: 94%;
	              padding: 0 3% 2% 3%;
	              font-size: 2em;
	            }
	          }
	        }
	     }
      }
    }
  }
  &#support {
    @extend body.pages;
  }
}
