.container
  .row
    .twelvecol.last
      %h1= @photo.title
      %h4= @photo.description
    .twelvecol.last
      &nbsp;
    .twelvecol.last
      .twocol
        = button_to '< Previous', photo_path(@photo.id - 1), :method => :get if Photo.where(:id => @photo.id - 1).any?
        - if @stacks
          %h3 Libraries
          - @stacks.each do |s|
            %p= link_to s.library.name, s.library
        = form_for(@stack, :remote => true) do |f|
          = render 'shared/form_error' if @stack.errors.any?
          = f.hidden_field(:user_id, :value => current_user.id)
          = f.hidden_field(:scope_id, :value => Scope.where(:name => 'Photo').first.id)
          = f.hidden_field(:target_id, :value => @photo.id)
          .field
            = f.collection_select(:library_id, Library.all, :id, :name)
          .actions
            = f.submit 'Add to a library'

      .eightcol
        = image_tag @photo.photo.url(:large)
      .twocol.last
        = button_to 'Next &rarr;', photo_path(@photo.id + 1), :method => :get if Photo.where(:id => @photo.id + 1).any?
    .twelvecol.last
      .twocol
      .twocol
        %p
          Credit:
          = (@photo.attribution.empty?) ? link_to(@photo.user.name, @photo.user) : @photo.attribution
      .twocol
        %p
          Uploaded by
          = link_to @photo.user.name, @photo.user
      .twocol
      .twocol
        %p.right= link_to 'View full size', @photo.photo.url, :target => '_blank'
      .twocol.last
