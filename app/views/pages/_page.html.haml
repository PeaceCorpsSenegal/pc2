.box
  = avatar_for(page)
  = page.language.name if page.language
  = page.title
  = page.description
  = truncate(page.content, :length => 200, :separator => ' ')
  = link_to 'show', page
  = link_to 'edit', edit_page_path(page)
  = link_to 'destroy', page, confirm: 'Are you sure?', method: :delete
