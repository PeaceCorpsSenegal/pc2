%tr
  %td= render_photo(page.photo_id, :small)
  %td
    %h1= page.title
  %td= page.description
  %td= truncate(page.content, :length => 200, :separator => ' ')
  %td= link_to 'show', page
  %td= link_to 'edit', edit_page_path(page)
  %td= link_to 'destroy', page, confirm: 'Are you sure?', method: :delete
