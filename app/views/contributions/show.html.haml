.container
  .row
    .twelvecol.last
      :erb
        <p>
          <b>User:</b>
          <%= @contribution.user.name %>
        </p>

        <p>
          <b>Scope:</b>
          <%= @contribution.scope.name %>
        </p>

        <p>
          <b>Target:</b>
          <%= @contribution.scope.name.constantize.find_by_id(@contribution.target_id).title %>
        </p>

        <p>
          <b>Comment:</b>
          <%= @contribution.comment %>
        </p>
