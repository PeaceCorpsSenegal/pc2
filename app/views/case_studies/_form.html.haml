= form_for(@case_study) do |f|
  .box
    = render :partial => 'shared/form_error', :locals => {:a => @case_study} if @case_study.errors.any?
    %h1 About the case study
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :photo_id
      = f.collection_select(:photo_id, Photo.all, :id, :title)
    .field
      = f.label :language_id
      = f.collection_select(:language_id, Language.all, :id, :name)
    = render 'shared/tag_field', :f => f
  .box
    %h1 Body of study
    .field
      = f.label :summary
      = f.text_area :summary
    .field
      = f.label :context
      = f.text_area :context
    .field
      = f.label :approach
      = f.text_area :approach
    .field
      = f.label :results
      = f.text_area :results
    .field
      = f.label :challenges
      = f.text_area :challenges
    .field
      = f.label :lessons_learned
      = f.text_area :lessons_learned
    .field
      = f.label :next_steps
      = f.text_area :next_steps
    .actions
      = f.submit
