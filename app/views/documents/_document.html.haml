%li
  %h4
    = document.name
    %span
      = time_ago_in_words(document.updated_at)
      ago
  %p
    = document.description if document.description
    .tags.right= render 'shared/tags', :tags => document.tag_list
  %p.right= link_to 'view details', document
  = button_to 'download', '', :method => :get
  = document.file_content_type
