.container
  .row
    .span-5
      = render 'shared/menu'
    .span-15
      = form_tag '/documents/search', :method => :get do
        = label_tag :q, 'search for'
        = text_field_tag :q
        = label_tag :f, 'in'
        = text_field_tag :f
        = submit_tag 'search'
      .box
        %h1 Documents
        %ul.feed
          = render @documents
      .center= will_paginate
    .span-4.last
      .box
        %h3 Top Document Tags
        = cloud_of_tags
      = render 'shared/right_user_menu'
