<!DOCTYPE html>
%html
  %head
    %title title
    = stylesheet_link_tag "application", :media => 'all'
    = javascript_include_tag "application"
    = csrf_meta_tags
    -#%link{:href => image_path('favicon.ico'), :type => 'image/x-icon', :rel => 'icon'}
  %body{:class => "#{params[:controller].parameterize}", :id => "#{params[:action].parameterize}"}
    = render 'layouts/header'
    = render 'layouts/notice', :notice => notice
    = render 'layouts/alert', :alert => alert
    = yield
    - if Rails.env.development?
      = debug(params)
      Class: #{params[:controller].parameterize}
      %br
      ID: #{params[:action].parameterize}
    = render 'layouts/footer'
