<!DOCTYPE html>
%html
  %head
    %title= title
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{:href => image_path('favicon.ico'), :type => 'image/x-icon', :rel => 'icon'}
  %body{:class => "#{params[:controller]}", :id => "#{params[:action]}"}
    = render 'layouts/header'
    #main
      #header_spacer
      = render 'shared/notice_bar' if notice
      #page
        = yield
        - if Rails.env.development?
          .container
            .row
              .twelvecol.last
                = debug(params)
                -#= find_named_routes.inspect if Rails.env.development?
                Class: #{params[:controller]}
                %br
                ID: #{params[:action]}
    = render 'layouts/footer'
    - if signed_in?
      = render 'layouts/user_menu_bar'
      = render 'layouts/admin_menu_bar' if current_user.admin?
      = render 'layouts/moderator_menu_bar' if current_user.moderator? && !current_user.admin?
    = render 'layouts/feedback' unless signed_in? && current_user.admin?
