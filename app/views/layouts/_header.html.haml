%header
  .container
    .row
      .twelvecol.last
        %a{:id => "site_title", :href => '/splash'}
          %span#title_organization= organization
          %span#title_separator= '|'
          %span#title_country= signed_in? ? current_user.country.name : country
          %sub beta
        %ul{:style => "float:left;"}
          %li= link_to 'Home', root_path
          %li= link_to 'Pages', pages_path
          %li= link_to 'Updates', updated_pages_path
          %li= link_to 'Photos', photos_path
          %li= link_to 'Videos', ''
          %li= link_to 'Documents', documents_path
          %li= link_to 'Blogs', blogs_path
          %li= link_to 'Learning', ''
          %li= link_to '50th', moments_path
          %li= link_to 'Users', users_path if signed_in?
        %ul{:style => "float:right;"}
          - if signed_in?
            %li#gravatar= gravatar_for current_user
            %li= link_to current_user.name, current_user
          - else
            %li= link_to 'Sign in', login_path
        .clearfloat
