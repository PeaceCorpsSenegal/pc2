#header
  .container
    .row
      .span-24.last
        %a{:id => "site_title", :href => '/splash'}
          %span#title_organization= organization
          %span#title_separator= '|'
          %span#title_country= signed_in? && current_user.country? ? Carmen.country_name(current_user.country) : country
          %sub beta
        %ul{:style => "float:left;"}
          %li= link_to 'Home', root_path
          %li= link_to 'Pages', updated_pages_path
          %li= link_to 'Case Studies', case_studies_path
          %li= link_to 'Photos', photos_path
          -#%li= link_to 'Videos', ''
          %li= link_to 'Files', documents_path
          %li= link_to 'Libraries', libraries_path
          - if can? :read, User
            %li= link_to 'Users', users_path
          -#%li= link_to 'Blogs', blogs_path
          -#%li= link_to 'Learning', ''
          -#%li= link_to '50th', moments_path
        %ul{:style => "float:right;"}
          - if signed_in?
            %li#gravatar= avatar_for_user current_user, :size => :icon
            %li= link_to current_user.name, current_user
            %li= link_to 'SSL', 'https://pcsenegal.com'
          - else
            %li= link_to 'Sign in', login_path
            %li= link_to 'Sign up', new_user_registration_path
        .clearfloat
