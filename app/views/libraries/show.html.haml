.row
  .span3
    = render 'shared/menu'
  .span9
    = render 'menu'
    .row
      .span5
        %h1
          = @library.name
          = link_to 'edit', edit_library_path(@library) if can? :update, @library
        %h4= @library.description
      .span4
        %h3
          = flag_icon(@library.country.downcase)
          This library is managed by
        %ul.feed
          = render @library.user
    .tabbable
      %ul.nav.nav-tabs
        %li.active= link_to 'Files', '#files', 'data-toggle' => 'tab'
        %li= link_to 'Photos', '#photos', 'data-toggle' => 'tab'
      .tab-content
        .tab-pane#files.active
          - @library.stacks.each do |s|
            = render s.stackable if s.stackable_type == 'Document'
        .tab-pane#photos
          - @library.stacks.each do |s|
            = render s.stackable if s.stackable_type == 'Photo'
