.container
  .row
    .span-24.last
      .box.center.top_menu
        .span-4
          = link_to icon(:page), pages_path
          = link_to 'All Pages', pages_path
        .span-4
          = link_to icon(:search), case_studies_path
          = link_to 'Search Case Studies', case_studies_path
        .span-4
          = link_to icon(:photo), photos_path
          = link_to 'Browse Photos', photos_path
        .span-4
          = link_to icon(:page), pages_path
          = link_to 'Page Tree', pages_path
        .span-4.last
          = link_to icon(:page), pages_path
          = link_to 'Weekly food security update', pages_path
        .clearfloat
  .row
    .span-12
      .box
        %h1 Latest Page Updates
        %ul.feed
          = render @pages, :size => :icon
      .box
        %h1 Latest Photos
        = render @photos
      .span-12
        .box
          %h1 Featured Users
          %ul.feed
            = render @users
      .span-12.last
        .box
          %h1 Top Tags
          = cloud_of_tags Photo
          = cloud_of_tags Document
          = cloud_of_tags Page
          = cloud_of_tags CaseStudy
          = cloud_of_tags User
          = cloud_of_tags Blog
        .box
          %h1 Quick Stats
          %ul
            %li= pluralize(User.count, 'user')
            %li= pluralize(Page.count, 'page')
            %li= pluralize(CaseStudy.count, 'case study')
            %li= pluralize(Photo.count, 'photo')
            %li= pluralize(Document.count, 'file')
            %li= pluralize(Library.count, 'library')
            %li= pluralize(Blog.count, 'blog')
    .span-12.last
      .span-12
        .box
          = image_tag 'twitter_newbird_blue.png', :class => 'twitter_bird'
          = render 'shared/twitter', :twitter_user => 'pc_senegal'
      .span-12.last
        .box
          = image_tag 'twitter_newbird_blue.png', :class => 'twitter_bird'
          = render 'shared/twitter', :twitter_user => 'stompoutmalaria'
      .clearfloat
      .box
        %h1 Case Studies
        %ul.feed
          = render @case_studies, :size => :icon
      .box
        %h1 Documents
        %ul.feed
          = render @documents, :size => :icon