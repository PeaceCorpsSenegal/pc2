<%= form_for(@region) do |f| %>
  <% if @region.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@region.errors.count, "error") %> prohibited this region from being saved:</h2>

      <ul>
      <% @region.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :short %>
    <%= f.text_field :short %>
  </div>
  <div class="field">
    <%= f.label :parent_id %>
    <%= f.collection_select(:parent_id, Region.accessible_by(current_ability, :create), :id, :name, :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :country_id %>
    <%= f.country_select(:country, ['SN', 'GM']) %>
  </div>
  <div class="field">
    <%= f.label :type_id %>
    <%= f.collection_select(:type_id, Regiontype.all, :id, :name) %>
    <%= link_to 'add a region type', new_regiontype_path if can? :create, Regiontype%>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
