.left_menu
  = link_to image_tag('pc_logo.png', :alt => "#{organization} #{country}", :id => 'main_menu_logo', :width => '260px'), root_path
  = render 'menu' rescue nil
  .accordion
    - if @page && !@page.new_record? && @page.children.accessible_by(current_ability).any?
      %h3= @page.title
      %div
        %ul
          - if @page.parent && can?(:read, @page.parent)
            %li= link_to 'Up', @page.parent
          - @page.children.accessible_by(current_ability).each do |item|
            %li= link_to item.title, item
    -elsif @page && !@page.new_record? && @page.parent && @page.siblings.accessible_by(current_ability).any?
      %h3= @page.parent.title
      %div
        %ul
          - if @page.parent && can?(:read, @page.parent)
            %li
              &#x279A;
              = link_to 'Up', @page.parent
          - @page.siblings.accessible_by(current_ability).each do |item|
            %li= link_to item.title, item
    - Page.find_by_sql("SELECT DISTINCT country FROM pages ORDER BY country ASC").each do |country|
      %h3{:id => country.country}= Carmen.country_name(country.country)
      %div
        %ul
          - Page.accessible_by(current_ability).order('title ASC').where("parent_id IS NULL AND country = ?", country.country).each do |item|
            %li= link_to item.title, item
  .box
    %h2 Quick Links
    %ul
      %li= link_to 'Food Security Weekly Update', Page.where("title LIKE '%food security%'").first
  .box.search
    %h1 Google Search
    :erb
      <div id="google_search" name="google_search"><!-- Google search -->
        <form method="get" action="http://www.google.com/search">
          <input type="hidden" name="ie" value="UTF-8" />
          <input type="hidden" name="oe" value="UTF-8" />
          <input type="hidden" name="domains" value="http://pcsenegal.org" />
          <input type="hidden" name="sitesearch" value="http://pcsenegal.org" checked />
          <!--<input type="submit" name="btnG" value="Google Search" height="50px" />-->
          <input type="text" name="q" maxlength="200" />
          <input type="submit">
        </form>
      </div><!--END Search Google -->
  :erb
    <!-- Performable Super Conversion Button -->
    <script src='//d1nu2rn22elx8m.cloudfront.net/buttons/8nTkT/TKVLd-RsqBruCPMxzR.js'></script>
    <!-- /Performable Super Conversion Button -->