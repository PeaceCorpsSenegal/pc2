- @user.memberships.build
= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2 #{pluralize(@user.errors.count, "error")} prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :email2
    = f.text_field :email2
  .field
    = f.label :phone1
    = f.text_field :phone1
  .field
    = f.label :phone2
    = f.text_field :phone2
  .field
    = f.label :country_id
    = f.collection_select(:country_id, Country.all, :id, :name)
  .field
    = f.label :bio
    = f.text_area :bio
  .actions
    = f.submit

- if current_user.admin?
  = form_for @user.memberships.build, :remote => true do |f|
    = f.hidden_field(:user_id, :value => @user.id)
    .field
      = f.label :group_id
      = f.collection_select(:group_id, Group.all, :id, :name)
    .actions
      = f.submit
