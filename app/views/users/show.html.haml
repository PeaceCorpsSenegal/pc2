.container
  .row
    .threecol
      = render 'shared/menu'
    .sevencol
      .sixcol
        %h1= @user.name
      .sixcol.last
      .sixcol
        - unless @user.volunteers.empty?
          %h3 PCV
          %p
            = @user.country.name
            %br
            alias
            - @user.volunteers.each do |v|
              #{v.local_name},
          - @user.volunteers.each do |v|
            %h4 Sector
            %p= v.sector.name
            %h4 Site
            %p= v.site.name
            - if v.emphasis
              %h4 Emphasis
              %p= v.emphasis
            - if v.projects
              %h4 Projects
              %p= v.projects
        %h3 Connect
        %p
          = @user.email
          - unless @user.email2.nil?
            %br
            = @user.email2
        - unless @user.phone1.nil?
          %p
            = @user.phone1
            - unless @user.phone2.nil?
              %br
              = @user.phone2
        - unless @user.blogs.empty?
          %p #{link_to @user.blogs.first.title, @user.blogs.first.url} &rang; #{@user.blogs.first.description}
        - unless @user.site.nil?
          %p= link_to @user.site
        - unless @user.contributions.empty?
          %h3 Contributions
          %ul= render :partial => 'contributions/contribution', :collection => @user.contributions
      .sixcol.last
        - unless @user.staff.empty?
          %h3 Staff Member
          %h4 Location
          %p= @user.staff.first.site.name
          %p
            = @user.staff.first.building
            = "| #{@user.staff.first.office}" if @user.staff.first.office
            = "| #{@user.staff.first.floor.to_i.ordinalize} floor" if @user.staff.first.floor
          -if @user.staff.first.morning_open
            %p
              = @user.staff.first.morning_open.to_formatted_s(format = :time)
              \-
              = @user.staff.first.morning_close.to_formatted_s(format = :time)
              %br
              = @user.staff.first.afternoon_open.to_formatted_s(format = :time)
              \-
              = @user.staff.first.afternoon_close.to_formatted_s(format = :time)
          = markdown(@user.staff.first.details) if @user.staff.first.details
        - unless @user.groups.empty?
          %h3 Groups
          %ul
            = render @user.groups
        - unless @user.authorizations.empty?
          %h3 Social Connections
          %ul
            = render @user.authorizations
      - if @user.bio
        %h4.clearfloat A little bit about #{@user.name}...
        = markdown(@user.bio)
    .twocol.last
      = gravatar_for @user, :size => 160
      - unless @user.permissions.empty?
        %h3 Specific Permissions
        %ul= render :partial => 'permissions/permission', :collection => @user.permissions
      - unless @user.groups.empty?
        %h3 Group Permissions
        - @user.groups.each do |g|
          %h4= g.name
          %ul= render :partial => 'permissions/permission', :collection => g.permissions
